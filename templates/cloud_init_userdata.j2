#cloud-config
chpasswd:
  expire: false
user: ec2-user
hostname: {{ ec2_hostname }}
fqdn: {{ ec2_hostname }}.compute.internal
manage_etc_hosts: true
preserve_hostname: true
packages:
- tmux
- nc
- traceroute
- tcpdump
- vim
write_files:
  - path: /etc/sysctl.d/90-frr-routing.conf
    content: |
      net.ipv4.ip_forward = 1
      net.ipv6.conf.all.forwarding = 1

runcmd:
  - sysctl --system
